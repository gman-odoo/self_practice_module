<?xml version="1.0"?>
<odoo>
    <record id="employee_details_action" model="ir.actions.act_window">
        <field name="name">Service Providers</field>
        <field name="res_model">employee_details</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="employee_details_view_tree" model="ir.ui.view">
        <field name="name"> Title</field>
        <field name="model">employee_details</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" />
                <field name="description" />
                <field name="availibility" />
                <field name="phone_number" />
                <field name="email" />
            </tree>
        </field>
    </record>
    <record id="employee_details_view_form" model="ir.ui.view">
        <field name="name">employee_details_view_form</field>
        <field name="model">employee_details</field>
        <field name="arch" type="xml">
            <form string="New">
                <sheet>
                    <header>

                        <field name="availibility" widget="statusbar" options="{'clickable':'1'}" />
                    </header>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>


                        <h2>
                            <field name="description" placeholder="Description" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </h2>


                        <group>
                            <field name="image" widget="image" />
                        </group>
                    </group>

                    <group>
                        <group col="2">
                            <group>


                                <field name="job_position" />
                                <field name="service_id" />
                                <field name="email" />
                                <field name="phone_number" />
                            </group>
                            <group>

                                <field name="customer_id" />
                                <field name="active" />

                            </group>

                        </group>

                        <notebook>
                            <page string="Bank details">
                                <group>
                                    <group>
                                        <field name="payment_terms" />
                                        <field name="bank" />
                                        <field name="account_number" />
                                    </group>
                                </group>
                            </page>
                            <page string="Customer Ratings">
                                <group>
                                    <group>
                                        <field name="tip_recieved" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="employee_details_search" model="ir.ui.view">
        <field name="name">employee_details_search</field>
        <field name="model">employee_details</field>
        <field name="arch" type="xml">
            <search string="Search">
                
                <field name="name"/>
                <field name="job_position" />
                <field name="phone_number"/>
                <field name="email"/>
                <field name="languages"/>
                <field name="bank"/>
                <field name="account_number"/>
                <field name="availibility"/>
                <field name="tag_ids"/>
                <field name="service_id"/>
                <filter string="Check Availibility" name="availibility" domain="[('availibility','=','available')]"/>
                <group expand="1" string="Group By">
                    <filter name="service" string="job position" context="{'group_by':'job_position'}"/>

                </group>

            </search>
        </field>
    </record> 


</odoo>